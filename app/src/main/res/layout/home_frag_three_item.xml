<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/home_frag_three_item_img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/home_frag_three_item_img"
        android:layout_marginTop="15dp"
        android:id="@+id/home_frag_three_item_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/home_frag_three_item_img"
        android:layout_below="@id/home_frag_three_item_title"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/home_frag_three_item_time"
        />

</RelativeLayout>
