<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sunny.mvppandatv.view.Personal.EmailRegistFragment">

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱注册需要激活后才能登陆"
        android:textColor="#286EB9"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/email_num_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text"
        android:hint="账号：请输入邮箱" />

    <TextView
        android:id="@+id/email_num_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="邮箱不能为空"
        android:textColor="#ff5959"
        android:textSize="12sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/email_pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text"
            android:hint="请输入密码" />
    </LinearLayout>

    <TextView
        android:id="@+id/email_pwd_edit_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="密码不能为空"
        android:textColor="#ff5959"
        android:textSize="12sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/email_pwd_edit_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text"
            android:hint="请确认密码" />

    </LinearLayout>

    <TextView
        android:id="@+id/email_pwd_sure_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="确认密码不能为空"
        android:textColor="#ff5959"
        android:textSize="12sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="11"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/email_yzm_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="7"
            android:background="@drawable/edit_text"
            android:hint="请输入验证码" />

        <ImageView
            android:id="@+id/email_yzm_img_btn"
            android:layout_width="0dp"
            android:src="@mipmap/def_no_play"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3" />

    </LinearLayout>

    <TextView
        android:id="@+id/email_yzm_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="验证码不能为空"
        android:textColor="#ff5959"
        android:textSize="12sp"
        android:visibility="invisible" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="10px" >

        <CheckBox
            android:id="@+id/email_xieyi_check"
            android:layout_width="74px"
            android:layout_height="74px"
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_check"
            android:button="@null"
            />
        <TextView
            android:id="@+id/email_reg_xieyi_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/email_xieyi_check"
            android:text="@string/regist_protorcal"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/hint_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_alignLeft="@id/email_xieyi_check"
            android:layout_below="@id/email_xieyi_check"
            android:textColor="#f00" />



    </RelativeLayout>
    <TextView
        android:id="@+id/email_btn_register"
        android:layout_width="match_parent"
        android:layout_height="132px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:background="@mipmap/pe_login_view_bg"
        android:gravity="center"
        android:padding="30px"
        android:text="注册"
        android:textColor="@color/white" />

</LinearLayout>