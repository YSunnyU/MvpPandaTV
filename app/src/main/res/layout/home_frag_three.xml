<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/aqwer"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#d4cece" />

        <TextView
            android:id="@+id/pandaeye_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="23dp"
            android:text="熊猫观察"
            android:textColor="#21549f"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignLeft="@+id/pandaeye_text"
            android:layout_alignStart="@+id/pandaeye_text"
            android:layout_below="@+id/pandaeye_text"
            android:layout_marginTop="20dp"
            android:background="#d4cece" />


        <ImageView
            android:id="@+id/home_three_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/home_frag_title_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:background="@drawable/shape"
            android:text="s;ldf"
            android:textColor="#ff236b" />

        <TextView
            android:id="@+id/home_frag_title_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/home_three_img"
            android:layout_alignEnd="@+id/home_frag_title_one"
            android:layout_alignRight="@+id/home_frag_title_one"
            android:layout_marginBottom="28dp"
            android:background="@drawable/shape"
            android:text="sha"
            android:textColor="#ff236b" />

        <TextView
            android:id="@+id/home_frag_title_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/home_frag_title_one"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/home_frag_title_two"
            android:layout_toRightOf="@+id/home_frag_title_two"
            android:text="三 "
            android:textSize="15dp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/home_frag_title_four"
            android:layout_toRightOf="@+id/home_frag_title_four"
            android:background="#d4cece" />

        <TextView
            android:id="@+id/home_frag_title_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/home_frag_title_three"
            android:layout_alignStart="@+id/home_frag_title_three"
            android:layout_alignTop="@+id/home_frag_title_two"
            android:text="四    "
            android:textSize="15dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/home_three_img"
        android:background="#d4cece" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_frag_three_recy_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
