<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.sunny.mvppandatv.view.Personal.PersonalLoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/user_login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F539E">
        <ImageView
            android:id="@+id/personalLoginBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/personal_back_img"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="登陆"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/user_enroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#eaeaea"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用社交账号登陆到熊猫频道" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/user_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/login_weixin"
                    android:gravity="center"
                    android:text="微信"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/user_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/login_qq"
                    android:gravity="center"
                    android:text="QQ"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/user_weibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/login_sina"
                    android:gravity="center"
                    android:text="微博"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="CNTV通行证"
            android:textColor="#1F539E"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/user_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:hint="账号：请输入邮箱或手机号" />

        <TextView
            android:id="@+id/numisEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱/手机号不能为空"
            android:textColor="#ff0000"
            android:visibility="gone" />

        <EditText
            android:id="@+id/user_psw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/edit_text"
            android:hint="请输入密码" />

        <TextView
            android:id="@+id/pwdisEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码不能为空"
            android:textColor="#ff0000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/user_no_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:autoLink="all"
            android:text="忘记密码?"
            android:textColor="#2f64b1" />

        <Button
            android:id="@+id/user_go"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/user_landing_btn"
            android:text="登陆"
            android:textColor="#fff"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
